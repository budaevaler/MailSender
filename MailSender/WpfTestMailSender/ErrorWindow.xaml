<Window x:Class="WpfTestMailSender.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="400" Width="450" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="320"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="lblError" Grid.Row="0" TextWrapping="Wrap" />
        <Button Name="btnOk" Content="Ок" Grid.Row="1" Width="70" Margin="10" Click="BtnOk_Click"/>
    </Grid>
</Window>
